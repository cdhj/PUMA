    function swiper_container_w(scw) {
    	var slide_w = $("."+scw+" .swiper-slide").width();
    	var slide_leg = $("."+scw+" .swiper-slide").length;
    	if (slide_leg<8) {
    		$("."+scw+" .swiper-container-horizontal").width(slide_w*slide_leg);
    	}
    }
    
    swiper_container_w("boutique_nav");
});